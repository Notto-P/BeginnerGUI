@model IEnumerable<Webpayment.Models.db.Product>

@{
    ViewData["Title"] = "Product Management";
}

<h1>จัดการสินค้า <a asp-action="Create" class="btn btn-outline-success">Create New</a> </h1>
<div class="table-responsive-lg">
    <table class="table">
        <thead class="bg-dark text-white">
            <tr>
                <th>

                </th>
                <th>
                    ชื่อสินค้า
                </th>
                <th>
                    รูปสินค้า
                </th>
                <th>
                    ราคาสินค้า
                </th>
                <th>
                    จำนวนที่มี
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.IdProduct" class="btn btn-outline-warning">Details</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem=> item.Image)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Unit)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdProduct" class="btn btn-outline-info">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.IdProduct" class="btn btn-outline-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>